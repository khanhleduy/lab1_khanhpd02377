<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f3f3"
        android:orientation="vertical">

        <LinearLayout
            android:background="#a9c149"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgCaNhan"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:src="@drawable/emone"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

            <LinearLayout
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvTenND"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:text="Lê Duy Khánh"
                    android:textSize="20sp"
                    android:textColor="#ff00"
                    android:textStyle="bold" />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvPhone"
                        android:layout_marginTop="16dp"
                        android:text="01699594740"
                        android:layout_marginLeft="8dp"
                        android:id="@+id/tvPhone"
                        android:textSize="18sp"
                        android:layout_toRightOf="@+id/TvMaNganh" />
        </LinearLayout>

                <ImageView
                    android:id="@+id/imgDelete"
                    android:layout_width="53dp"
                    android:layout_height="76dp"
                    android:layout_marginTop="-13dp"
                    android:src="@drawable/ic_close"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>